/* 头部欢迎界面《----- */
.top {
	position: relative;
	background-color: #62a9f9;
	height: 250rpx;
	border-bottom-left-radius: 20rpx;
	border-bottom-right-radius: 20rpx;
	box-shadow: 10rpx 10rpx 10rpx -4rpx rgba(0, 0, 0, .4);
	margin-bottom: 30rpx;
}
.top .top-img {
	position: absolute;
	top: 15rpx;
	left: 15rpx;
	width: 220rpx;
	height: 220rpx;
	box-sizing: border-box;
	box-shadow: 10rpx 10rpx 10rpx -4rpx rgba(0, 0, 0, .4);
	border-radius: 50%;
}
.top .top-text {
	position: absolute;
	top: 30rpx;
	right: 110rpx;
	font-size: 55rpx;
	font-weight: 600;
	color: #DCDFE6;
	text-shadow: 5rpx 5rpx 10rpx rgba(255, 255, 255, .4);
}
.top .welcome {
	position: absolute;
	bottom: 40rpx;
	right: 80rpx;
	width: auto;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 40rpx;
	font-weight: 600;
	border-radius: 20rpx;
	color: #DCDFE6;
	-webkit-animation: welcomeShow 0.5s;
	        animation: welcomeShow 0.5s;
	-webkit-animation-timing-function: ease-out;
	        animation-timing-function: ease-out;
}

/* 动画 */
@-webkit-keyframes welcomeShow {
0% {
		bottom: 300rpx;
}
100% {
		bottom: 40rpx;
}
}
@keyframes welcomeShow {
0% {
		bottom: 300rpx;
}
50% {
		bottom: 40rpx;
}
70% {
		bottom: 80rpx;
}
80% {
		bottom: 40rpx;
}
90% {
		bottom: 60rpx;
}
100% {
		bottom: 40rpx;
}
}

