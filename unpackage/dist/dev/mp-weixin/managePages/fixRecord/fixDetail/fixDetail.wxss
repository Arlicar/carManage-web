.content {
	display: flex;
	align-items: center;
	/* justify-content: center; */
	flex-direction: column;
	width: 100%;
	height: 150%;
	position: absolute;
	background-image: linear-gradient(#7bc4ff, #4389f2);
}

/* ---- */

/* 内容主体 */
.main {
	position: absolute;
	top: 100rpx;
	width: 80%;
	background-color: rgba(255,255,255,.2);
	padding: 0 30rpx 30rpx 30rpx;
	border-radius: 15rpx;
}
.bg-gray {
	color: #ffffff;
	font-weight: 600;
	font-size: 40rpx;
	text-align: center;
	border-radius: 15rpx;
	box-sizing: border-box;
}
.word {
	text-align: center;
	height: 70rpx;
	line-height: 70rpx;
}
.main-text {
	border-bottom: 4rpx solid #fff;
}

